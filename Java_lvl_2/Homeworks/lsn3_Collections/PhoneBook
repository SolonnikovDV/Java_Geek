    public static void main(String[] args) {

        PhoneBookList rec1 = new PhoneBookList("Bdfy", "9090909090");
        PhoneBook phoneBook = new PhoneBook();
        phoneBook.addRecord(rec1.getPhoneNumber(), rec1.getName());
        System.out.println(phoneBook);

    }



}
