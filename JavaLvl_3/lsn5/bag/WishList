package lsn5.HomeWorkDoing;

import lsn5.HomeWorkDoing.Bag.Item;

import java.util.ArrayList;
import java.util.List;

// перечень предметов, выбранный пользователем
// данный перечень подлежит проверке при наполнении рюкзака
public class WishList {
    public List<Item> wishList = new ArrayList<>();
    Item first;

    public WishList() {
        this.first = null;
    }

    // метод добавления премета в лист пользоваеля
    public void insert(Item item) {
        item.next = first;
        first = item;
    }

    // метод добавления элемента в список пользователя
    public List<Item> addItem (Item item){
        wishList.add(item);
        return wishList;
    }

    // метод вывода списка в консоль
    public void display() {
        Item current = first;
        while (current != null) {
            current.print();
            current = current.next;
        }
    }
}
